<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddNewWordActivity"
    android:padding="15dp"
    android:background="@drawable/gradient_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/banner_add_form"
                android:text="Here's your add new word form!!"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/banner_add_form"
                android:src="@drawable/banner_add_form"/>
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ti_word"
                android:layout_marginTop="20dp">
                <EditText
                    android:id="@+id/etWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Word"
                    android:textSize="15sp"
                    android:background="@color/white"
                    android:maxLines="1"/>
            </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ti_pos"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:id="@+id/etPartOfSpeech"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Part of speech"
                        android:textSize="15sp"
                        android:background="@color/white"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ti_meaning"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:id="@+id/etWordMeaning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Meaning"
                        android:textSize="15sp"
                        android:background="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ti_example"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:id="@+id/etWordExample"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Example"
                        android:textSize="15sp"
                        android:background="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ti_trans"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:id="@+id/etExampleTrans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Translation"
                        android:textSize="15sp"
                        android:background="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_submit"
                    android:text="Add"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>